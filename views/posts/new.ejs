<% layout('/layouts/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/new.css">

<form action="/posts" method="POST" enctype="multipart/form-data">
    <div class="card">
        <div class="card-body">
            <div class="drop-zone">
                <p class="drop-zone__prompt"><i class="far fa-image imgFile"></i><br>Drop file here or click to upload
                </p>
                <input type="file" name="image" class="drop-zone__input form-control" required>
            </div>
        </div>

        <div class="d-grid gap-2">
            <button class="btn btn-primary">Next</button>
        </div>
    </div>
    <script src="/javascripts/new.js"></script>
</form>